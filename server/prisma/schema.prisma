generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  snippets Snippet[]
}

model Snippet {
  id     String @id @default(uuid())
  name   String
  lang   String
  code   String
  userId String

  user User @relation(fields: [userId], references: [id])
}
